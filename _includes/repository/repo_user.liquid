<div class="repo p-2 text-center">
  <a href="https://github.com/{{ include.username }}">
    <img
      class="repo-img-light w-100"
      alt="{{ include.username }}"
      src="https://github-readme-stats-eight-theta.vercel.app/api?username={{ include.username }}&theme={{ site.repo_theme_light }}&show_icons=true&include_all_commits=true&count_private=true&hide_border=true"
    >
    <img
      class="repo-img-dark w-100"
      alt="{{ include.username }}"
      src="https://github-readme-stats-eight-theta.vercel.app/api?username={{ include.username }}&theme={{ site.repo_theme_dark }}&show_icons=true&include_all_commits=true&count_private=true&hide_border=true"
    >
  </a>
</div>
